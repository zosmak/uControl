<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_alarms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucontrol.ucontrolstudio.activity_alarms">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Alarms"
            android:layout_width="match_parent"
            android:id="@+id/textView"
            android:fontFamily="bariol"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="?attr/colorControlActivated"
            android:layout_height="50dp"
            android:textStyle="normal|bold" />

        <ListView
            android:layout_width="match_parent"
            android:textColor="?attr/colorControlActivated"
            android:choiceMode="multipleChoice"
            android:id="@+id/lista_alarms"
            android:layout_height="300dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginTop="0dp">

            <Switch
                android:text="Power:"
                android:layout_width="fill_parent"
                android:textOn='On'
                android:textOff='Off'
                android:showText="true"
                android:textSize="20sp"
                android:textColor="?attr/colorControlActivated"
                android:layout_height="wrap_content"
                android:id="@+id/alarms_switch"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="normal|bold"
                android:checked="false" />

            <ImageView
                app:srcCompat="@drawable/audioconfirm"
                android:id="@+id/confirmUpdateAlarms"
                android:layout_marginTop="0dp"
                android:layout_height="match_parent"
                android:layout_width="200dp"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1." />

        </LinearLayout>

        </LinearLayout>


</RelativeLayout>
