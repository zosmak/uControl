<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_illumination"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucontrol.ucontrolstudio.activity_illumination">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Ligths"
            android:layout_width="match_parent"
            android:id="@+id/textView"
            android:fontFamily="bariol"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/color_doors"
            android:layout_height="50dp"
            android:textStyle="normal|bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:choiceMode="multipleChoice"
            android:textColor="@android:color/white"
            android:id="@+id/lista_ilumination" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp">

            <TextView
                android:text="Intensity:"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="@color/color_doors"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <NumberPicker
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:id="@+id/nbIllumination"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp">
            </NumberPicker>

            <ImageView
                app:srcCompat="@drawable/ilumchange"
                android:id="@+id/changeUpdateIllu"
                android:layout_height="80dp"
                android:layout_marginTop="55dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
