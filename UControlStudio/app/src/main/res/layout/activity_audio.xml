<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_audio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucontrol.ucontrolstudio.activity_audio">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:weightSum="1">

        <TextView
            android:text="Devices"
            android:layout_width="match_parent"
            android:id="@+id/textView"
            android:fontFamily="bariol"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryAudio"
            android:layout_height="50dp"
            android:textStyle="normal|bold" />

        <ListView
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryAudio"
            android:choiceMode="multipleChoice"
            android:id="@+id/lista_dispositivos"
            android:layout_height="162dp" />

        <Switch
            android:text="Power:"
            android:layout_width="match_parent"
            android:textOn='On'
            android:textOff='Off'
            android:showText="true"
            android:textSize="25dp"
            android:textColor="?attr/colorControlActivated"
            android:layout_height="60dp"
            android:id="@+id/audio_switch"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:textStyle="normal|bold"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <NumberPicker
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:id="@+id/nbAudio">
        </NumberPicker>

        <ImageView
            app:srcCompat="@drawable/audioconfirm"
            android:id="@+id/confirmUpdateAudio"
            android:layout_marginTop="25dp"
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1." />

    </LinearLayout>


</RelativeLayout>
