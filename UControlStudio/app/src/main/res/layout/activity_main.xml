<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ucontrol.ucontrolstudio.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:weightSum="1">

            <ImageView
                app:srcCompat="@drawable/television"
                android:id="@+id/main_tv"
                android:layout_height="180dp"
                android:layout_width="180dp" />

            <ImageView
                app:srcCompat="@drawable/illumination"
                android:id="@+id/main_illumination"
                android:layout_height="180dp"
                android:layout_width="180dp"  />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:weightSum="1">

            <ImageView
                app:srcCompat="@drawable/airconditioner"
                android:id="@+id/main_ac"
                android:layout_height="180dp"
                android:layout_width="180dp" />

            <ImageView
                app:srcCompat="@drawable/audio"
                android:id="@+id/main_audio"
                android:layout_height="180dp"
                android:layout_width="180dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:weightSum="1">

            <ImageView
                app:srcCompat="@drawable/blinds"
                android:id="@+id/main_blinds"
                android:layout_height="180dp"
                android:layout_width="180dp"/>

            <ImageView
                app:srcCompat="@drawable/alarm"
                android:id="@+id/main_alarm"
                android:layout_height="180dp"
                android:layout_width="180dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:weightSum="1">

            <ImageView
                app:srcCompat="@drawable/doors"
                android:id="@+id/main_doors"
                android:layout_height="180dp"
                android:layout_width="180dp"/>

            <ImageView
                app:srcCompat="@drawable/manage"
                android:id="@+id/main_manage"
                android:layout_height="180dp"
                android:layout_width="180dp"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
