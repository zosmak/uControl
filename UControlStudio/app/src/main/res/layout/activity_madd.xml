<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_madd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucontrol.ucontrolstudio.activity_madd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="1">

                <ImageView
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/television"
                    android:id="@+id/addTv"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/illumination"
                    android:id="@+id/addIllumination"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="1">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/airconditioner"
                    android:id="@+id/addAC"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/audio"
                    android:id="@+id/addAudio"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="1">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/blinds"
                    android:id="@+id/addBlinds"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/alarm"
                    android:id="@+id/addAlarms"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="1">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/doors"
                    android:id="@+id/addDoors"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/manage"
                    android:id="@+id/addDivison"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>