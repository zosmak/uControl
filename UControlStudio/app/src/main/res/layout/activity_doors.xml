<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_doors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucontrol.ucontrolstudio.activity_doors"
    android:background="@color/colorPrimaryDoors">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="Doors"
            android:layout_width="match_parent"
            android:id="@+id/textView"
            android:fontFamily="bariol"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:textStyle="normal|bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:textColor="@android:color/white"
            android:id="@+id/lista_doors" />


            <Switch
                android:text="State: "
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:id="@+id/doors_switch"
                android:textColor="@android:color/white"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Button"
                android:textOn='On'
                android:textOff='Off'
                android:showText="true"
                android:checked="false" />

        <ImageView
            app:srcCompat="@drawable/doorsconfirm"
            android:id="@+id/imageButton"
            android:layout_width="200dp"
            android:paddingBottom="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:paddingTop="60px"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>