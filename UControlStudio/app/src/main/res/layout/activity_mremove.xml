<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mremove"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ucontrol.ucontrolstudio.activity_mremove">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    app:srcCompat="@drawable/television"
                    android:id="@+id/removeMainTv"
                    android:layout_weight="0.50"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

                <ImageView
                    app:srcCompat="@drawable/illumination"
                    android:id="@+id/removeMainIllumination"
                    android:layout_weight="0.50"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    app:srcCompat="@drawable/airconditioner"
                    android:id="@+id/removeMainAc"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

                <ImageView
                    app:srcCompat="@drawable/audio"
                    android:id="@+id/removeMainAudio"
                    android:layout_weight="0.50"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    app:srcCompat="@drawable/blinds"
                    android:id="@+id/removeMainBlinds"
                    android:layout_weight="0.50"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

                <ImageView
                    app:srcCompat="@drawable/alarm"
                    android:id="@+id/removeMainAlarm"
                    android:layout_weight="0.50"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/doors"
                    android:id="@+id/removeMainDoors"
                    android:layout_width="match_parent"
                    android:layout_weight="0.50" />

                <ImageView
                    app:srcCompat="@drawable/manage"
                    android:layout_weight="0.50"
                    android:id="@+id/removeDoors"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

                <ImageView
                    app:srcCompat="@drawable/removedivision"
                    android:id="@+id/removeMainDivision"
                    android:layout_height="180dp"
                    android:layout_width="180dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>